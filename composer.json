{
    "name": "softspring/cms-blog-plugin",
    "description": "A Blog extension for softspring cms",
    "type": "sfs-cms-plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": false,
    "require": {
        "php": ">=8.1",
        "softspring/cms-bundle": "^5.2@dev",
        "scienta/doctrine-json-functions": "^5.2",
        "softspring/time-ago-bundle": "^5.2@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.9"
    },
    "suggest": {
        "softspring/user-bundle": "If you want to use users as blog authors"
    },
    "autoload": {
        "psr-4": {
            "Softspring\\CmsBlogPlugin\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
